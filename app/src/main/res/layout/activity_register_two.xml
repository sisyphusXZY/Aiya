<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.aiyaschool.aiya.message.ui.activity.RegisterTwoActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/register_two_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:text="上传真人头像"
            android:layout_below="@id/register_two_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="170dp"
        android:layout_height="40dp">
        <TextView
            android:gravity="center"
            android:text="姓名"
            android:layout_width="40dp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/register_two_activity_name"
            android:layout_width="100dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="170dp"
        android:layout_height="40dp">
        <TextView

            android:gravity="center"
            android:text="性别"
            android:layout_width="40dp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/register_two_activity_sexual"
            android:layout_width="100dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="170dp"
        android:layout_height="40dp">
        <TextView
            android:gravity="center"
            android:text="学校"
            android:layout_width="40dp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/register_two_activity_school"
            android:layout_width="100dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="170dp"
        android:layout_height="40dp">
        <TextView
            android:gravity="center"
            android:text="生日"
            android:layout_width="40dp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/register_two_activity_birthday"
            android:layout_width="100dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="170dp"
        android:layout_height="40dp">

        <TextView
            android:gravity="center"
            android:text="身高"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/textView" />

        <EditText
            android:id="@+id/register_two_activity_height"
            android:layout_width="100dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="170dp"
        android:layout_height="40dp">
        <TextView
            android:gravity="center"
            android:text="家乡"
            android:layout_width="40dp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/register_two_activity_hometown"
            android:layout_width="100dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <Button
        android:id="@+id/register_two_activity_confirm"
        android:text="confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
