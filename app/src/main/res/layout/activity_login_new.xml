<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_three"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.aiyaschool.aiya.message.ui.activity.RegisterThreeActivity">
    <TextView
        android:gravity="center"
        android:text="账号登陆"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="200dp"
        android:layout_height="50dp">
        <TextView
            android:gravity="center"
            android:text="手机号"
            android:layout_width="40dp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/login_new_activity_telephonenumber"
            android:layout_width="100dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="200dp"
        android:layout_height="50dp">
        <TextView
            android:gravity="center"
            android:text="输入登录密码"
            android:layout_width="40dp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/login_new_activity_password"
            android:layout_width="100dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <Button
        android:id="@+id/login_new_activity_login"
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#0000ff"
        android:text="忘记密码?"
        android:id="@+id/login_new_activity_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
