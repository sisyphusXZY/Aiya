<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aiyaschool.aiya.message.ui.activity.RegisterFirstActivity">
    <EditText
        android:layout_gravity="center"
        android:id="@+id/register_first_activity_phone_editText"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <EditText
            android:layout_gravity="center"
            android:id="@+id/register_first_activity_verify_editText"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/register_first_activity_verify_button"
            android:text="验证码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/register_first_activity_next_button"
        android:layout_gravity="center"
        android:text="下一步"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
