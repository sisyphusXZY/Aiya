<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 这个布局里的宽高是经过计算的，不要随意改动！！！-->
    <RelativeLayout
        android:id="@+id/rl_record"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:visibility="visible">
        <RelativeLayout
            android:id="@+id/rl_func_layout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

            ＜!--试听按钮-->
            <ImageView
                android:id="@+id/img_try_play"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/voice_play"
                android:layout_alignParentLeft="true"
                />
            ＜!--取消按钮-->
            <ImageView
                android:id="@+id/img_voice_delete"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/voice_delete"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <!--录音按钮-->
        <ImageView
            android:id="@+id/img_record"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/voice_recorder"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"/>


        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="#f4f7f6"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="#90C8F6"/>
            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="按住说话"
                android:textColor="#454343"
                android:layout_centerInParent="true"/>
            <!--时间动态添加,布局与上面的相同-->
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_try_play"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:visibility="invisible">
        <TextView
            android:id="@+id/tv_tip_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="06:00"
            android:layout_centerHorizontal="true"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tip_time"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp">

            <com.github.lzyzsd.circleprogress.DonutProgress
                android:id="@+id/donut_progress"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:donut_progress="30"
                app:donut_text_color="@android:color/transparent"/>
            <ImageView
                android:id="@+id/listen_audio"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/play"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/btn_cancle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="取消"/>
            <Button
                android:id="@+id/btn_send"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="发送"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>

